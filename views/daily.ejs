        }
        .finish-item{
            left: 50%;
            top: 50%;
            transform: translate(60%, 35%);
        }
        .create-item{
            left: 50%;
            top: 50%;
            transform: translate(60%, 35%);
        }
        .daylist .card{
            min-width: calc(100% / 2 - 50px);
