    .content .header i{
        margin-right: 10px;
    }
    .header .header-left{
        display: flex;
        color: #030303;
        font-size: 20px;
        font-weight: 600;
    }
    .header .header-right{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .header-right i{
        cursor: pointer;
        padding: 5px 5px 5px 5px;
        border-radius: 50%;
        transition: .05s;
    }
    .header-right i:hover{
        background-color: #b9b9b9;
    }
    .header-right .show-createitem{
        width: 25px;
        border: none;
        background-color: transparent;
    }
    .show-createitem i{
        font-size: 18px;
    }
    .header-right .uncompleted{
        display: flex;
        color: #b9b9b9;
        font-size: 15px;
        font-weight: 600;
        justify-content: space-around;
        align-items: center;
        border-radius: 8px;
        margin-right: 10px;
        background-color: #d8d8d8;
        padding: 2px 5px 2px 5px;
        cursor: pointer;
        transition: .05s;
    }
    .uncompleted:hover{
        color: #d8d8d8;
        background-color: #b9b9b9;
    }
    .uncompleted i{
        font-size: 18px;
        color: #030303;
        padding: 0;
    }
    .daylist{
        width: 100%;
        margin-top: 50px;
        display: flex;
        overflow-y: auto;;
        flex-wrap: wrap;
    }
    .daylist .card{
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        min-width: calc(100% / 3 - 50px);
        max-width: 200px;
        height: fit-content;
        padding: 10px 10px 10px 10px;
        background-color: #f9f9f9;
        border-radius: 8px;
        margin-right: 50px;
        margin-bottom: 20px;
        box-shadow: 0 2px 18px rgba(0, 0, 0, .08);
        overflow-wrap: break-word;
    }
    .card .title-day{
        color: #030303;
        width: 100%;
        font-size: 20px;
        font-weight: 700;
    }
    .card .date{
        color: #b9b9b9;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 20px;
    }
    .card .title{
        color: #b9b9b9;
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 5px;
    }
    .card .titlediv,
    .card .description{
        color: #030303;
        margin-bottom: 10px;
    }
    .card .titlediv{
        font-size: 15px;
        font-weight: 600;
    }
    .card .description{
        font-size: 14px;
        font-weight: 600;
    }
    .task-card-btn{
        display: flex;
        justify-content: flex-end;
        width: 100%;
        align-items: center;
    }
    .task-card-btn i{
        font-size: 18px;
        margin-right: 10px;
        cursor: pointer;
        transition: .05s;
    }
    .task-card-btn i:hover{
        scale: 1.1;
    }
    .task-card-btn .finish-btn{
        color: #f9f9f9;
        background-color: #030303;
        border: solid 3px #f9f9f9;
        font-size: 15px;
        font-weight: 600;
        width: 75px;
        padding: 8px 5px 8px 5px;
        border-radius: 8px;
        cursor: pointer;
        transition: .05s;
    }
    .task-card-btn .finish-btn:hover{
        background-color: transparent;
        border: solid 3px #030303;
        color: #030303;
    }

