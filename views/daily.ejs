<style>
    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: sans-serif;
        text-decoration: none;
    }
    body{
        background-color: #f9f9f9;
    }
    .container{
        height: 100vh;
        width: 100vw;
        display: flex;
    }
    .container section{
        position: absolute;
    }
    .overlay{
        position: absolute;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.3);
        pointer-events: none;
        opacity: 0;
    }
    section.active .overlay,
    section.true .overlay,
    section.false .overlay{
        z-index: 450;
        pointer-events: auto;
        opacity: 1;
    }
    .uncompleted-item{
        opacity: 0;
        pointer-events: none;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(20%, 10%);
        width: 900px;
        height: 500px;
        color: #b9b9b9;
        background-color: #f9f9f9;
        font-size: 25px;
        font-weight: 600;
        border-radius: 15px;
        padding: 15px 15px 65px 15px;
        box-shadow: 0 2px 18px rgba(0, 0, 0, .08);
    }
    section.false .uncompleted-item{
        opacity: 1;
        pointer-events: auto;
        z-index: 500;
    }
    .uncompleted-item .uncompleted-item-close-btn{
        display: flex;
        align-items: center;
        position: absolute;
        right: 10px;
        top: 10px;
        cursor: pointer;
        z-index: 550;
    }
    .uncompleted-item-close-btn i{
        font-size: 18px;
    }
    .uncompleted-item .uncompleted-item-content{
        overflow: auto;
        display: flex;
        flex-wrap: wrap;
        margin-top: 20px;
        width: 100%;
        height: 100%;
    }
    .uncompleted-item-content .card{
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        min-width: calc(100% / 3 - 50px);
        max-width: 200px;
        height: fit-content;
        padding: 10px 10px 10px 10px;
        background-color: #f9f9f9;
        border-radius: 8px;
        margin-right: 50px;
        margin-bottom: 20px;
        box-shadow: 0 2px 18px rgba(0, 0, 0, .08);
        overflow-wrap: break-word;
    }
    .card i{
        color: #030303;
    }
    .create-item{
        opacity: 0;
        pointer-events: none;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(150%, 25%);
        width: 300px;
        color: #b9b9b9;
        background-color: #f9f9f9;
        font-size: 25px;
        font-weight: 600;
        border-radius: 15px;
        padding: 15px 15px 15px 15px;
        box-shadow: 0 2px 18px rgba(0, 0, 0, .08);
    }
    section.active .create-item{
        z-index: 500;
        opacity: 1;
        pointer-events: auto;
    }
    .create-item form{
        display: flex;
        flex-direction: column;
        margin-top: 20px;
        font-size: 15px;
        font-weight: 600;
    }
    .create-item form label{
        margin-bottom: -10px;
    }
    .create-item form input{
        outline: none;
        width: 100%;
        height: 40px;
        margin-bottom: 5px;
        padding: 5px 10px 5px 10px;
        border-radius: 8px;
        background-color: #d8d8d8;
        color: #030303;
        border: none;
        font-size: 14px;
        font-weight: 600;
    }
    .create-item form input.btn{
        align-self: flex-end;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 80px;
        height: 40px;
        background-color: #030303;
        color: #f9f9f9;
        transition: .05s;
        cursor: pointer;
    }
    .create-item form input.btn:hover{
        background-color: transparent;
        border: solid 3px #030303;
        color: #030303;
    }
    .create-item .close-btn{
        position: absolute;
        top: 324px;
        right: 100px;
        width: 80px;
        height: 40px;
        font-weight: 600;
        background-color: #030303;
        color: #f9f9f9;
        font-size: 14px;
        border-radius: 8px;
        transition: .05s;
        cursor: pointer;
    }
    .close-btn:hover{
        background-color: transparent;
        border: solid 3px #030303;
        color: #030303;
    }
    .finish-item{
        opacity: 0;
        pointer-events: none;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(150%, 35%);
        width: 300px;
        color: #b9b9b9;
        background-color: #f9f9f9;
        font-size: 25px;
        font-weight: 600;
        border-radius: 15px;
        padding: 15px 15px 15px 15px;
        box-shadow: 0 2px 18px rgba(0, 0, 0, .08);
    }
    section.true .finish-item{
        opacity: 1;
        pointer-events: auto;
        z-index: 600;
    }
    .finish-item .close-item{
        width: 100%;
        display: flex;
        justify-content: flex-end;
        font-size: 14px;
        cursor: pointer;
    }
    .finish-item .finish-task-btn{
        display: flex;
        justify-content: space-between;
        height: 40px;
        margin-top: 20px;
    }
    .finish-task-btn button{
        width: calc(100% / 2 - 5px);
        border: solid 3px #030303;
        background-color: transparent;
        border-radius: 8px;
        color: #030303;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: .05s;
    }
    .finish-task-btn button:hover{
        color: #f9f9f9;
        background-color: #030303;
    }
    .finish-item .finish-task-content{
        display: block;
    }
    .finish-item .notcompleted-task-content{
        display: none;
    }
    .finish-item .finish-task-content-text{
        color: #030303;
        font-size: 15px;
        font-weight: 600;
        margin-top: 10px;
    }
    .virtual-account .va-title{
        font-size: 15px;
        color: #030303;
        font-weight: 600;
        margin-top: 20px;
    }
    .virtual-account .va-number{
        font-size: 15px;
        color: #b9b9b9;
    }
    .finish-task-content form,
    .notcompleted-task-content form{
        margin-top: 10px;
    }
    .finish-task-content label,
    .notcompleted-task-content label{
        color: #030303;
        font-size: 12px;
        font-weight: 600;
    }
    .finish-task-content form .input-image,
    .notcompleted-task-content form .input-image{
        font-size: 12px;
        color: #030303;
    }
    .finish-task-content form .submit-image,
    .notcompleted-task-content form .submit-image1{
